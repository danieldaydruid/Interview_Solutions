<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Stock_Market_App.ChartsPage"
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
    ios:Page.UseSafeArea="true">
    <StackLayout BackgroundColor="Silver" VerticalOptions="Center">
        <Label Text="Line Chart" FontSize="Large" TextColor="White" HorizontalTextAlignment="Center"/>
        <microcharts:ChartView x:Name="ChartView" HeightRequest="250" VerticalOptions="Center"/>
        <Button Text="Generate Chart" BackgroundColor="Blue" TextColor="Orange" Clicked="GenerateChartButton_Clicked" VerticalOptions="End" WidthRequest="200"/>    
        </StackLayout>
</ContentPage>